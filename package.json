		"@types/dotenv": "^8.2.3",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.13.8",
		"@types/supertest": "^6.0.2",
		"@types/winston": "^2.4.4",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"lint-staged": "^15.4.3",
		"nodemon": "^3.1.9",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.6",
